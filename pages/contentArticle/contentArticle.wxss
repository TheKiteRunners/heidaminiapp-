/* pages/contentArticle/contentArticle.wxss */
.container {
  height: 100vh;
  position: relative;
  background-color: #ffffff;
}

.split{
   background-color: #f2f2f2;
   width: 100%;
   height: 2rpx;
   margin-bottom: 10rpx;
}

.message-wrapper {
  background-color: #f2f2f2;
  padding: 20rpx 20rpx;
}

.message{
   position: relative;
   margin-bottom: 10rpx;
   padding: 20rpx;
   /*height: 400rpx;*/
   background: #ffffff;
   border-radius: 5%;
}

.message-author {
  margin-bottom:20rpx;
  height: 100rpx;
  position: relative;
}
.message-author .headimg{
   width: 100rpx;
   height: 100rpx;
   border-radius: 50%;   
   box-shadow:0 0 20rpx rgba(0,0,0,.2);
   vertical-align: middle;
   margin-right: 20rpx;
}
.message-author text{
   line-height: 100rpx;
}
.message-author .delete_img {
  width: 32rpx;
  height: 32rpx;
  padding: 34rpx;
  float: right;
}
.message-author .delete_img::after {
  clear: both;
  content: '';
  display: block;
}

.message-author  .nickname {
  display: inline-block;
  position: absolute;
  line-height: 50rpx;
  top: 0;
  color: #2c2c2c;
}
.message-author  .times {
  display: inline-block;
  position: absolute;
  line-height: 50rpx;
  height: 50rpx;
  bottom: 0;
  font-size: 30rpx;
  color: #999;
}


/*信息栏中部信息*/
.message-info{
   padding: 20rpx 20rpx;
   word-wrap: break-word;
   color: #2c2c2c;
}



/*信息栏底部tips*/
.tips{
   position: relative;
   bottom: 0;
   left: 0;
   padding: 10rpx 20rpx;
   color: #333;
   font-size: 30rpx;
   width: 650rpx;
   height: 75rpx;
}
.lookNum{
   float: left;
   display: inline-block;
}
.message-icon{
   float: right;
   display: inline-block;
   padding: 5.5rpx 0;
}
.lookNum text{
   line-height: 75rpx;
}
.likeNum{
   margin-right: 20rpx;
}
.like{
   width: 64rpx;
   height: 64rpx;
   margin-right: 20rpx;
}
.comment{
   width: 64rpx;
   height: 64rpx;
}

/* 底部评论区样式  */
.comments .no-comments {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no-comments text {
  display: block;
  text-align: center;
  color: #999;
  font-size: 32rpx;
  flex: 1;
}

.no-comments image {
  width: 256rpx;
  height: 256rpx;
  flex: 1;
}


/* 底部评论栏  */
.input-wrapper {
  position: absolute;
  width: 100%;
  box-shadow: 0 -2px 1px rgba(0,0,0,.1);
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
}

.input-wrapper textarea {
  display: inline-block;
  width: 575rpx;
  height: 100rpx;
  color: #333;
  line-height: 40rpx;
  border-right: 1px solid #f2f2f2;
}

.textarea-placeholder {
  color:#bfbfbf; 
}

.input-wrapper .send {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  border-radius: 8px;
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  display: inline-block;
  color: #ffffff;
  background: #0cb3f7;
}