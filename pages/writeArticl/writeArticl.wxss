/* pages/writeArticl/writeArticl.wxss */
.container{
   width: 100%;
   height: 100vh;
   background-color: #f2f2f2;
}
.write-info{
   background: #ffffff;
   padding: 20rpx 20rpx;
}
.write-info textarea{
   width: 100%;
}
.tools{
   height: 50rpx;
}
.hide-name{
   display: inline-block;
   float: left;
   color: #bfbfbf;
}
.max-font{
   display: inline-block;
   float: right;
   color: #bfbfbf;
}
.action .action-photos{
   padding: 40rpx 0 20rpx 40rpx;
}
.write-image{
   margin-top: 20rpx;
   margin-bottom: 20rpx;
}
 .action-photos image{
   height: 120rpx;
   width: 120rpx;
   display: inline-block;
   position: relative;
   margin-left: 30rpx;
   margin-top: 10rpx;
   overflow: visible;
}
 .action-photos image icon.del{
   color: #ffffff;
   position: absolute;
   top: -10rpx;
   right: -10rpx;
}
 .action-photos text.add{
   height: 120rpx;
   width: 120rpx;
   text-align: center;
   line-height: 120rpx;
   border: 2px dotted #ccc;
   display: inline-block;
   font-size: 100rpx;
   font-weight: 600;
   margin-left: 25rpx;
   vertical-align: top;
   color: #bfbfbf;
}
.submit{
   margin: 20rpx 20rpx;
}