/* pages/index/index.wxss */

.container {
   width: 100%;
   height: 100vh;
}

.scroll-image {
   width: 100%;
   height: 450rpx;
}

.scroll-image .slide-image {
   width: 100%;
   height: 100%;
}

.list-top {
   background-color: #fff;
   border-bottom: 1px solid #ccc;
}

.list-menu {
   display: inline-block;
   margin-left: 40rpx;
   text-align: center;
   padding-top: 30rpx;
   font-size: 16px;
}

.cur {
   color: #0cb3f7;
}

.cur::after {
   width: 100%;
   height: 2rpx;
   background-color: #0cb3f7;
   display: block;
   margin-top: 15rpx;
   content: "";
}

.list-body {
   margin: 0 40rpx;
   padding: 10rpx 0 13rpx 0;
}

.list-body .item-head {
   margin-bottom: 5rpx;
   font-weight: normal;
   color: #333;
   overflow: hidden;
   text-overflow: ellipsis;
}

